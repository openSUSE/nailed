!!!
%html
  %head
    != css :bootstrap, :media => 'screen'
    != css :morris, :media => 'screen'
    != css :customcss, :media => 'screen'
    %meta{:charset => "utf-8"}
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    %title #{@title}
    %link{:href => "/images/favicon.ico", :rel => "shortcut icon"}
  %body
    .container
      %nav.navbar.navbar-default{:role => 'navigation'}
        .container-fluid
          .navbar-header
            -#%button.navbar-toggle.collapsed{:type => 'button', :data => {:toggle => 'collapse'}, :data => {:target => '.navbar-collapse'}}
              %span.sr-only
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar
            %a.navbar-brand{:href => '/'} #{@title}
          #navbar.navbar-collapse.collapse
            %ul.nav.navbar-nav.pull-right
              %li.dropdown
                %a.dropdown-toggle{:role => 'button', :data => {:toggle => 'dropdown'}, :href => '/'} 
                  Menu
                  %span.caret
                %ul.dropdown-menu{:role => 'menu'}
                  %li.dropdown-header
                  Bugzilla
                  - @products.each do |product|
                    %li
                      %a{:href => "/#{product.gsub(/ /,'_')}/bugzilla"} #{product}
                  %li.divider
                  %li.dropdown-header
                  GitHub
                  - @github_repos.each do |repo|
                    %li
                      %a{:href => "/github/#{repo}"} #{repo}
            %form.navbar-form.navbar-right
              %input.form-control{:type => 'text', :placeholder => 'Filter', :id => 'searchfilter'}
    = yield
    :javascript
      $('.collapse').collapse();
      $(document).ready(function(){
        var timer;

        $(window).resize(function() {
            clearTimeout(timer);
            timer = setTimeout(function() {
                $('.inner-wrap').css("min-height", $(window).height() + "px" );
            }, 40);
        }).resize();
      });
